{% extends "ENSBundle:Enseignant:layout.html.twig" %}

{% block title %}
  Index Sanctions
{% endblock %}

{% block contextual_menu %}
  {# {{ include("ENSBundle:Discipline:contextual-menu-convocation.html.twig") }} #}
{% endblock %}

{% block titre_page %}
  <i class="american sign language interpreting icon"></i>{{ 'Discipline - Sanction'|trans }}
{% endblock %}

{% block corps %}
  <h2>{{ 'Sanctions'|trans }}</h2>
  {% if sanctions is not defined %}
    <p>{{ 'Aucun contrat n\'a encore été enregistrée'|trans }}</p>
  {% else %}
    <table class="ui selectable very basic table">
      <thead>
        <tr>
          <th>{{ 'N°'|trans }}</th>
          <th>{{ 'Matricule'|trans }}</th>
          <th>Nom & Prénom</th>
          <th>الإسم و اللقب</th>
          <th>{{ 'Sexe'|trans }}</th>
          <th>{{ 'Nombre de sanctions'|trans }}</th>
          <th>{{ 'Action'|trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% set n = 0 %}
        {% for sanction in sanctions %}
          {% set n = n + 1 %}
          <tr>
            <td>{{ n }}</td>
            <td>{{ sanction.matricule }}</td>
            <td>{{ sanction.nomFr }}</td>
            <td>{{ sanction.nomAr }}</td>
            <td>
              {% if sanction.sexe == 1 %}
                {{ 'ذكر' }}
              {% else %}
                {{ 'أنثى' }}
              {% endif %}
            </td>
            <td>
              {% if sanction.nbrSanction < 3 %}
                <a href="{{ path('ens_voir_sanction', {'as': asec, 'contratId': sanction.id}) }}" class="ui teal circular label">{{ sanction.nbrSanction }}</a>
              {% elseif sanction.nbrSanction < 5 %}
                <a href="{{ path('ens_voir_sanction', {'as': asec, 'contratId': sanction.id}) }}" class="ui orange circular label">{{ sanction.nbrSanction }}</a>
              {% else %}
                <a href="{{ path('ens_voir_sanction', {'as': asec, 'contratId': sanction.id}) }}" class="ui red circular label">{{ sanction.nbrSanction }}</a>
              {% endif %}
            </td>
            <td>
            <a href="{{ path('ens_add_sanction', {'as': asec, 'contratId': sanction.id})}}"><i class="plus orange icon"></i></a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}
{% endblock %}
