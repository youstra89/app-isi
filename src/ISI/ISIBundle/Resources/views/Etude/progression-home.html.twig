{% extends "ISIBundle:Etude:index.html.twig" %}

{% block title %}
    Etude | Page d'accueil
{% endblock %}

{% block contextual_menu %}  
    <div class="ui vertical menu">
      <div class="item">
        <div class="header">{{ 'Programme général'|trans }}</div>
        <div class="menu">
          {# Cette partie permet de voir la liste de tous les élèves de la l'institut #}
          <a class="item" href="{{ path('etude_niveaux_matieres', {'as': asec, 'regime': regime}) }}">{{ 'Contenu de formation'|trans }}</a>
        </div>
      </div>
    </div>
{% endblock %}

{% block corps %}
    {% set grp = '' %}
    {% if regime is same as ('A') %}
        {% set grp = 'Academie' %}
    {% else %}
        {% set grp = 'Formation' %}
    {% endif %}
    {% block head %}
        <div class="ui {{ dir2 }} aligned segment">
            <h1 class="ui header">
                <i class="student icon"></i>{{ 'PROGRESSION : '|trans }} {{ grp }}
            </h1>
        </div>
    {% endblock %}
    {% block content %}
    {% endblock %}
{% endblock %}