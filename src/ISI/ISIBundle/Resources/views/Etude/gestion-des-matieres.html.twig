{# Page de gestion des matières #}

{% extends "ISIBundle:Etude:index.html.twig" %}

{% block pageTitle %}
	Index | Matières
{% endblock %}

{% block contextual_menu %}  
    {% include('ISIBundle:Etude:contextual-menu-parametres.html.twig') %}
{% endblock %}

{% block head %}
	<div class="ui {{ dir2 }} aligned segment">
		<h1 class="ui header">
			<i class="student icon"></i>{{ 'Matières'|trans }}
		</h1>
	</div>
{% endblock %}
{% block content %}
	<h3>{{ 'Gestion des matieres'|trans }}</h3>
	<a href="{{ path('etude_nouvelle_matiere', {'as': asec}) }}">
		<button class="positive ui button">
			<i class="plus icon"></i>
			{{ 'Ajouter une matière'|trans }}
		</button>
	</a><br /><br />

	{% if matieres is null %}
		<p>{{ 'Aucune matière n\'a encore été enregistrée'|trans }}</p>
	{% else %}
	<div class="ui cards">
		{% for matiere in matieres %}
			<div class="card">
				<div class="content">
					<img class="right floated mini ui image" src="/markaz/web/images/logoISI-x.png">
					<div class="header">{{ matiere.getLibelle }} </div>
					<div class="meta">
						{{ matiere.getReferenceLangue.getLibelle }}
					</div>
					<div class="meta">
						{% if matiere.matiereMere %}
							Matière enfant de {{ matiere.matiereMere.libelle }}
						{% endif %}
					</div>
				</div>
				<div class="extra content">
					<div class="ui two buttons">
						<a href="{{ path('etude_edit_matiere', {'as': asec, 'matiereId': matiere.getId}) }}">
							<div class="ui basic green button">{{ 'Modifier'|trans }}</div>
						</a>
						<a href="">
							<div class="ui basic red button">{{ 'Supprimer'|trans }}</div>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
		</div>
	{% endif %}

{% endblock %}
