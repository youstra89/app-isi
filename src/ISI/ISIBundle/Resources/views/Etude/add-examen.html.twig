{# Page d'ajout d'un nouvel examen #}

{% extends "ISIBundle:Etude:index.html.twig" %}

{% block pageTitle %}
	Enregistrer examen
{% endblock %}

{% block contextual_menu %}
{% endblock %}

{% block head %}
	<div class="ui {{ dir2 }} aligned segment">
		<h1 class="ui header">
			<i class="settings icon"></i>{{ 'PARAMETRES'|trans }}
		</h1>
	</div> 
{% endblock %}

{% block content %}
	<h3>{{ 'Enregistrement d\'un nouvel examen'|trans }}</h3>
	{# {{ dump(form.dateProclamationResultats) }} #}

	<div class="form-group">
		{{ form_start(form, {'attr': {'class': 'ui form'}}) }}
		<div class="four fields">
			<div class="field">
				<label for="">
					 {{ form_label(form.session, "Session", {'label_attr': {'class': ''}}) }}
					 {{ form_errors(form.session) }}
				</label> {{ form_widget(form.session, {'attr': {'class': 'session'}}) }}
			</div>
			<div class="field">
				<label for="">
					 {{ form_label(form.libelleAr, "Libellé (arabe)", {'label_attr': {'class': ''}}) }}
					 {{ form_errors(form.libelleAr) }}
				</label> {{ form_widget(form.libelleAr, {'attr': {'class': 'libelleAr'}}) }}
			</div>
			<div class="field">
				<label for="">
					 {{ form_label(form.libelleFr, "Libellé (français)", {'label_attr': {'class': ''}}) }}
					 {{ form_errors(form.libelleFr) }}
				</label> {{ form_widget(form.libelleFr, {'attr': {'class': 'libelleFr'}}) }}
			</div>
			<div class="field">
				<label for="">
					{# {{ form_label(form.dateProclamationResultats, "Date de proclamation", {'label_attr': {'class': ''}}) }}
					{{ form_errors(form.dateProclamationResultats) }} #}
					Date de proclamation
				</label> 
				{# {{ form_widget(form.dateProclamationResultats, {'attr': {'class': 'libelleFr'}}) }} #}
				<input type="date" name="date" required="required"/>
			</div>
		</div>
		{{ form_widget(form.save, {'attr': {'class': 'ui primary button'}}) }}
	  {{ form_end(form) }}
	</div>

{% endblock %}
