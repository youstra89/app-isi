{% extends 'ISIBundle:Disposition:index.html.twig'%}


{% block title 'Disposition de classe dans une salle' %}


{% block body %}
  <div class="ui right aligned segment">
    <h1 class="ui header">
      <i class="student icon"></i>{{ 'Disposition en salle de classe'|trans }}
    </h1>
  </div>
  <h2>Disposition de classe dans la salle : {{ salle.nom }} - {{ salle.batiment.nom }} - {{ salle.localisation }}</h2>
  <div>
    <form action="" method="post" class="ui form">
      <div class="three fields">
        <div class="field">
          <label for="classeA">Classe Académie</label>
          <select class="ui fluid dropdown" name="classeA" id="classeA">
              <option value="">{{ 'Sélectionner une classe'|trans }}</option>
              {% for cl in classesA %}
                  <option value="{{ cl.id }}">{{ cl.libelleFr }}</option>
              {% endfor %}
          </select>
        </div>
        <div class="field">
          <label for="classeF">Classe Centre de formation</label>
          <select class="ui fluid dropdown" name="classeF" id="classeF">
              <option value="">{{ 'Sélectionner une classe'|trans }}</option>
              {% for cl in classesF %}
                <option value="{{ cl.id }}">{{ cl.libelleFr }}</option>
              {% endfor %}
          </select>
        </div>
      </div>
      <button type="submit" class="ui positive button">Valider</button>
    </form>
  </div>
{% endblock %}


{% block javascripts %}
{% endblock %}
