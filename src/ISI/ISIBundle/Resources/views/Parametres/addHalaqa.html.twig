{# Page d'ajout d'une nouvelle classe #}
{% extends "ISIBundle:Parametres:index.html.twig" %}
{% block pageTitle %} Enregistrer halaqa {% endblock %}

{% block content %}
<h3>{{ 'Enregistrement d\'une nouvelle halaqa'|trans }}</h3>

<div class="form-group">
	{{ form_start(form, {'attr': {'class': 'ui form'}}) }}

		<div class="two fields">
			<div class="field">
				<label for="">
					{{ form_label(form.libelle, "Libelle Halaqa", {'label_attr': {'class': ''}}) }}
					{{ form_errors(form.libelle) }}
				</label> {{ form_widget(form.libelle, {'attr': {'class': 'nomFr', 'placeholder': 'Le nom de la halaqa'}}) }}
			</div>
			<div class="field">
				<label for="">
					{{ form_label(form.genre, "Genre lalaqa", {'label_attr': {'class': ''}}) }}
					{{ form_errors(form.genre) }}
				</label> {{ form_widget(form.genre, {'attr': {'class': 'nomFr'}}) }}
			</div>
		</div>

		{{ form_widget(form.save, {'attr': {'class': 'ui primary button'}}) }}
	{{ form_end(form) }}
</div>

{% endblock %}
