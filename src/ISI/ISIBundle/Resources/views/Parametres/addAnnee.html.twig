{# Page d'ajout d'une nouvelle année scolaire #}

{% extends "ISIBundle:Parametres:index.html.twig" %}

{% block title %}
	Nouvelle année
{% endblock %}

{% block body %}
	<h3>{{ 'Enregistrement d\'une nouvelle année scolaire'|trans }}</h3>

	<div class="well">
		{{ form_start(form, {'attr': {'class': 'ui form'}}) }}
			<div class="field">
				<label for="">
					{# Génération du label. #}
					{{ form_label(form.libelle, "Année scolaire", {'label_attr': {'class': ''}}) }}

					{# Affichage des erreurs pour ce champ précis. #}
					{{ form_errors(form.libelle) }}
				</label>

			    <div class="">
			        {# Génération de l'input. #}
			        {{ form_widget(form.libelle, {'attr': {'class': ''}}) }}
			    </div>
		    </div>

		    {{ form_widget(form.save, {'attr': {'class': ''}}) }}

	  	{{ form_end(form) }}
	</div>

{% endblock %}
