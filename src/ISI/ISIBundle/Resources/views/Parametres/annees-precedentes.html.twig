{# Page d'ajout d'une nouvelle année scolaire #}

{% extends "ISIBundle:Parametres:index.html.twig" %}

{% block title %}
	Années précédentes
{% endblock %}

{% block body %}
	<h3>{{ 'Années scolaires précédentes'|trans }}</h3>
	<div class="ui cards">
		{% for item in annees %}
			<div class="card">
				<div class="content">
					<img class="right floated mini ui image" src="{{ asset('images/logoISI-x.png') }}">
					<div class="header">{{ item.libelle }} </div>
				</div>
				{% set route_params = "5" %}
				<div class="extra content">
					<div class="ui buttons">
						<a href="{{ path('isi_homepage', {'as': item.id, 'annexeId': annexe.id}) }}">
							<div class="ui basic green button">{{ 'Revenir en '|trans }}{{ item.libelle}} </div>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
