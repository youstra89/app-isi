      });
      $('.test').velocity('callout.bounce')
    </script>
    <script>
      $("document").ready(function(){
        $('.ui.sticky')
          .sticky({
            context: '#example1'
          });
      });
    </script>
    {% block javascript %}
    {% endblock %}
</html>
