{# ISIBundle/Ressources/views/Parametres #}
{% set template = "" %} 
{% if is_granted("ROLE_NOTE") %} 
  {% set template = "::divers-layout.html.twig" %} 
{% else %} 
  {% set template = "ISIBundle::layout.html.twig" %}
{% endif %} 
{% extends template %}
{% block title %}
  {% block pageTitle %}
    Index Paramètres
  {% endblock %}
{% endblock %}

{# Ici je récupère l'identifiant de l'année scolaire#}

{% block contextual_menu %}
  {{ include("ISIBundle::contextual-menu-parameter-exam.html.twig") }}
{% endblock %}


{% block body %}
  <div class="ui {{ dir2 }} aligned segment">
    <h1 class="ui header"><i class="settings icon"></i>{{ 'Paramètres'|trans }}</h1>
  </div>
  <!-- Début d'affichage des notifications et des messages d'erreur -->
  {% for message in app.session.flashbag.get('error') %}
    <div class="ui red message">
      <div class="header">{{ 'Attention'|trans }} !!! </div>
      <ul class="list">
        <li>{{ message }}.</li>
      </ul>
    </div>
  {% endfor %}
  {% for message in app.session.flashbag.get('info') %}
    <div class="ui green message">
      <div class="header">{{ 'Notification'|trans }}: </div>
      <ul class="list">
        <li>{{ message }}</li>
      </ul>
    </div>
  {% endfor %}
  <!-- Fin d'affichage des notifications et des message d'erreur  -->
  {% block content %}
  {% endblock %}

{% endblock %}
